<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/back_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="158dp"
        android:text="PowrÃ³t"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/app_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coctail App"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Drink Image -->
<!--            <ImageView-->
<!--                android:id="@+id/drink_image"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="250dp"-->
<!--                android:layout_marginBottom="16dp"-->
<!--                android:src="@drawable/ic_placeholder" />-->

            <!-- Drink Name -->
            <TextView
                android:id="@+id/drink_name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drink Name"
                android:layout_marginBottom="8dp"/>

            <!-- Drink Category -->
            <TextView
                android:id="@+id/drink_category"
                android:textSize="18sp"
                android:text="Category: Cocktail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"/>

            <!-- Alcoholic Type -->
            <TextView
                android:id="@+id/drink_alcoholic"
                android:textSize="18sp"
                android:text="Alcoholic: Yes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Instructions -->
            <TextView
                android:id="@+id/drink_instructions"
                android:textSize="16sp"
                android:text="Instructions: Pour all ingredients into a cocktail shaker..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"/>

            <!-- Ingredients -->
            <TextView
                android:id="@+id/ingredient_1"
                android:textSize="16sp"
                android:text="1. Gin - 1 3/4 shot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/ingredient_2"
                android:textSize="16sp"
                android:text="2. Grand Marnier - 1 Shot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"/>

            <!-- Repeat for other ingredients as needed -->

            <!-- Back Button -->
            <Button
                android:id="@+id/back_button"
                android:text="Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>